<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Get Green With Us</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="search-location-text">Search for a Local Environmental Issue</label>
            <input type="text" id="search-location" class="form-control" aria-describedby="search-text" placeholder="Enter Zip Code">
          </div>
          <div class="form-group">
            <label for="search-article">Report On Environmental Issue</label>
            <textarea class="form-control" id="search-info" aria-describedby="search-article" placeholder="Enter Zip Code"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Reported Articles:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
